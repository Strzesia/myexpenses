<% if flash.present? %>
  <div id='flash'>
    <script>
        <% if flash[:success] %>
        let $toastContent = $('<span><%= flash[:success] %></span>');
        toastr.success($toastContent);
        <% end %>
        <% if flash[:info] %>
        let $toastContent = $('<span><%= flash[:info] %></span>');
        toastr.info($toastContent);
        <% end %>
        <% if flash[:danger] %>
        let $toastContent = $('<span><%= flash[:danger] %></span>');
        toastr.error($toastContent);
        <% end %>
    </script>
  </div>
<% end %>